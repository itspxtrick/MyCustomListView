<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_codename"
        android:layout_toRightof="@+id/iv_logo"
        android:text="Codename"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_version"
        android:layout_below="@+id/tv_codename"
        android:text="Version"
        android:layout_alighnLeft="@+id/tv_codename"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_api"
        android:layout_alignBaseline="@+id/tv_version"
        android:text="API"
        android:layout_toRightof="@+id/tv_version"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="Release date"
        android:layout_below="@+id/tv_version"
        android:layout_alignLeft="@+id/tv_version"
        />
</RelativeLayout>